
<article class="post">
    <div class="title">
        <h2>{{title}}</h2> 
        <h4>{{user.username}}</h4>
        <span>{{format_date created_at}}</span>
        <p>{{blogPosts_text}}</p>
    </div>
    
    <div class="meta">
        <a id="comment" href="/blogPost/{{id}}">{{comments.length}}{{format_plural "comment" comments.length}}</a>
    </div>
</article>